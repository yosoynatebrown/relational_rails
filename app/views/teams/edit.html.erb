<%= form_with url: "/teams/#{@team.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :share_stadium %>
  <%= form.check_box :share_stadium %>
  <%= form.label :roster_count %>
  <%= form.text_field :roster_count %>
  <%= form.hidden_field :city_id, value: @city.id %>
  <%= form.submit "Update Team" %>
<% end %>
